{% extends 'base.html.twig' %}

{% block title %}Allocinoche !
{% endblock %}
{% block body %}

	<div class="container px-2 py-2 mt-3 mb-3">
		<h1>Formulaire d'ajout d'un
			{{controller_name}}.</h1>
		{{form_start(form)}}
		<div class="py-2">{{form_row(form.firstName)}}</div>
		<div class="py-2">{{form_row(form.lastName)}}</div>
		<div class="py-2">{{form_row(form.dateOfBirth)}}</div>
		<div class="py-2">{{form_row(form.startCareerAt)}}</div>
		<div class="py-2">{{form_row(form.movies)}}</div>
		<button class='btn btn-warning' type="submit">Ajouter l'acteur</button>
		{{form_end(form)}}
	</div>

{% endblock %}
